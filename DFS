#include <iostream>
using namespace std;

class Graph
{
    int n, e;
    int adj[50][50];

public:
    void inputGraph();
    void displayMatrix();
    void DFS();
};

// -------- Input Graph --------
void Graph::inputGraph()
{
    int u, v;
    cout << "Enter number of vertices: ";
    cin >> n;
    cout << "Enter number of edges: ";
    cin >> e;

    // Initialize adjacency matrix
    for (int i = 1; i <= n; i++)
        for (int j = 1; j <= n; j++)
            adj[i][j] = 0;

    for (int i = 1; i <= e; i++)
    {
        cout << "Enter end vertices of edge " << i << ": ";
        cin >> u >> v;

        adj[u][v] = 1;
        adj[v][u] = 1;   // Undirected graph
    }
}

// -------- Display Adjacency Matrix --------
void Graph::displayMatrix()
{
    cout << "\nAdjacency Matrix:\n  ";
    for (int i = 1; i <= n; i++)
        cout << "V" << i << " ";
    cout << endl;

    for (int i = 1; i <= n; i++)
    {
        cout << "V" << i << " ";
        for (int j = 1; j <= n; j++)
            cout << adj[i][j] << "  ";
        cout << endl;
    }
}

// -------- DFS Traversal using Stack --------
void Graph::DFS()
{
    int start;
    int stack[50], top = -1;
    int visited[50] = {0};

    cout << "\nEnter starting vertex for DFS: ";
    cin >> start;

    stack[++top] = start;

    cout << "\nDFS Traversal: ";

    while (top != -1)
    {
        int m = stack[top--];

        if (visited[m] == 0)
        {
            cout << m << " ";
            visited[m] = 1;

            // Push adjacent vertices in reverse order
            for (int j = n; j >= 1; j--)
            {
                if (adj[m][j] == 1 && visited[j] == 0)
                {
                    stack[++top] = j;
                }
            }
        }
    }
    cout << endl;
}

// -------- Main Function --------
int main()
{
    Graph g;

    g.inputGraph();
    g.displayMatrix();
    g.DFS();

    return 0;
}
